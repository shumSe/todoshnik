<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LargeTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="Title">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="Button">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">10sp</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="Body">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="Subhead">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="fontWeight">500</item>
        <item name="android:textColor">@color/label_primary</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="android:colorControlActivated">@color/blue</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/AppTheme.Alert.Button.Positive</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/AppTheme.Alert.Button.Negative</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/AppTheme.Alert.Button.Neutral</item>
    </style>

    <style name="AppTheme.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AppTheme.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="AppTheme.Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
    <item name="android:textColor">@color/blue</item>
    </style>

    <style name="CustomSwitch" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/back_elevated
        </item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/support_separator
        </item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/support_separator</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="android:colorControlActivated">@color/back_primary</item>
        <item name="android:colorControlHighlight">@color/back_primary</item>
    </style>

    <style name="MyCustomFab" parent="">

        <!--for the extended FAB the cornerFamily is given the value as the cut-->
        <item name="colorSecondary">@color/blue</item>

        <!--this attribute gives makes the change in the text and icon color of the FAB-->
        <item name="colorOnSecondary">@color/white</item>

    </style>
</resources>